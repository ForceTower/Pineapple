<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_grades_situation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_logo_experimental"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_experimental_black_24dp"
            android:tint="?attr/color_primary"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_logo_experimental"
            android:layout_toEndOf="@id/iv_logo_experimental"
            android:layout_margin="16dp"
            android:layout_centerVertical="true"
            android:text="@string/experimental_content"
            android:textColor="?attr/color_accent"
            android:textSize="15sp"
            android:fontFamily="@font/roboto_regular"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>