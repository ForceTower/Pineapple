<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:id="@+id/layout_login"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="?attr/color_primary"
        tools:context=".view.login.fragment.LoginFormFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="36dp"
            android:paddingBottom="36dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_login_logo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:transitionName="transition_logo"
                android:src="@drawable/ic_unes_large_image_512"
                android:layout_margin="24dp"
                android:contentDescription="@string/logo"/>

            <RelativeLayout
                android:id="@+id/rl_loading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_login_logo">

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                    android:indeterminate="true"
                    android:layout_margin="24dp"/>

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cv_login_form_root"
                android:layout_below="@id/image_login_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@android:color/white"
                app:cardElevation="2dp"
                app:cardCornerRadius="2dp"
                android:visibility="invisible"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:padding="8dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_login_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:hint="@string/login_username"
                            android:imeOptions="actionNext"
                            android:inputType="textNoSuggestions|textEmailAddress"
                            android:maxLength="50"
                            android:maxLines="1" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/et_login_password"
                            android:hint="@string/login_password"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:maxLength="25"
                            android:imeOptions="actionDone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/btn_login_connect"
                        android:text="@string/login_connect"
                        style="@style/Widget.AppCompat.Button.Colored"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="40dp"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/roboto_regular"
                        app:srcCompat="@drawable/button_rectangle_rounded">
                    </android.support.v7.widget.AppCompatButton>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tv_click_to_know_about"
                android:clickable="true"
                android:focusable="true"
                android:layout_below="@id/cv_login_form_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:text="@string/click_to_know_about"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_regular"
                android:visibility="invisible"
                tools:visibility="visible"/>
        </RelativeLayout>
    </ScrollView>
</layout>