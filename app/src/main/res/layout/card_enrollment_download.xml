<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cv_enrollment_certificate"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivEnrollment"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/title_enrollment_certificate"
            app:srcCompat="@drawable/ic_certificate_icon"
            android:tint="?colorAccent"/>

        <TextView
            android:id="@+id/tvEnrollment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/ivEnrollment"
            android:layout_toRightOf="@id/ivEnrollment"
            android:layout_toStartOf="@id/btn_download_enrollment_cert"
            android:layout_toLeftOf="@id/btn_download_enrollment_cert"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/title_enrollment_certificate"
            android:textColor="@color/primaryText"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEnrollment"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/ivEnrollment"
            android:layout_toRightOf="@id/ivEnrollment"
            android:layout_toStartOf="@id/btn_download_enrollment_cert"
            android:layout_toLeftOf="@id/btn_download_enrollment_cert"
            android:fontFamily="@font/roboto_regular"
            android:text="@string/title_enrollment_cert_desc"
            android:maxLines="1"
            android:textSize="12sp"/>

        <ImageButton
            android:id="@+id/btn_download_enrollment_cert"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            app:srcCompat="@drawable/ic_download_black_24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/title_enrollment_certificate"/>

        <ProgressBar
            android:id="@+id/pb_download_enrollment_cert"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            tools:progress="50"
            android:visibility="invisible"
            tools:visibility="visible"
            android:indeterminate="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>