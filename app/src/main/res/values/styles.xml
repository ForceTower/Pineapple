<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="color_accent">@color/colorAccent</item>
        <item name="color_primary">@color/colorPrimary</item>
        <item name="color_primary_dark">@color/colorPrimaryDark</item>
        <item name="color_primary_light">@color/colorPrimaryLight</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="AppTheme.NavigationDrawer" parent="AppTheme" />

    <style name="AppTheme.PreferencesStyle" parent="AppTheme">
        <item name="android:listDivider">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
